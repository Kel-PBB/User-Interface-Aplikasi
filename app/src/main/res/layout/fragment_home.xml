<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="@color/birtud"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="80dp"
            layout="@layout/header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="270dp"-->
<!--                    android:layout_weight="0.7"-->
<!--                    android:background="@drawable/round_bottom_birtud" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Cari Kendaraan"
                        android:textSize="14dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:elevation="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:background="@drawable/round_outline_trans"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="0.4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:padding="5dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/birtud_trans"
                                    android:text="Tanggal Mulai Rental" />

                                <TextView
                                    android:layout_weight="0.8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:padding="5dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/birtud_trans"
                                    android:text="Durasi Hari" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_weight="0.8"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/baseline_calendar_today_24" />

                                    <EditText
                                        android:id="@+id/TanggalMulai"
                                        style="@style/EditTextTangal"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:focusableInTouchMode="true"
                                        android:hint="Sen, 01 Jan 2023"
                                        android:background="@drawable/form_search"
                                        android:textSize="13dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:inputType="date" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="0.4"
                                    android:layout_width="0dp"
                                    android:background="@drawable/form_search"
                                    android:layout_height="match_parent">

                                    <Spinner
                                        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                                        android:id="@+id/spinner_hari"
                                        android:scrollbars="none"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:popupBackground="@drawable/popup_background"
                                        android:dropDownHeight="50dp"
                                        android:dropDownVerticalOffset="10dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:padding="5dp"
                                android:textSize="12sp"
                                android:textColor="@color/birtud_trans"
                                android:text="Tanggal Selesai Rental " />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/baseline_calendar_today_24" />

                                <EditText
                                    android:id="@+id/TanggalSelesai"
                                    style="@style/EditTextTangal"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:focusableInTouchMode="true"
                                    android:enabled="false"
                                    android:hint="Sen, 01 Jan 2023"
                                    android:background="@drawable/form_search"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="13dp"
                                    android:inputType="date" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:padding="5dp"
                                android:textSize="12sp"
                                android:textColor="@color/birtud_trans"
                                android:text="Waktu Mulai/Selesai" />

                            <LinearLayout
                                android:id="@+id/waktujemputgroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/jam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/baseline_access_time_24" />

                                <EditText
                                    android:id="@+id/waktujemput"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/form_search"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:hint="09.00"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="13dp"
                                    android:inputType="none"
                                    android:paddingStart="10dp"/>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnCari"
                                android:layout_gravity="center_horizontal"
                                android:drawablePadding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/ripple_effect"
                                android:elevation="10dp"
                                android:text="Cari Mobil"
                                android:fontFamily="sans-serif-medium"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize"
                                tools:layout_editor_absoluteX="22dp"
                                tools:layout_editor_absoluteY="591dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.faltenreich.skeletonlayout.SkeletonLayout
                android:id="@+id/skeletonrvFaq"
                android:layout_width="wrap_content"
                android:layout_below="@+id/linearView"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFaq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    tools:listitem="@layout/item_faq" />
            </com.faltenreich.skeletonlayout.SkeletonLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
