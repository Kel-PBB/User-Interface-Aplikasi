<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Daftar"
        android:theme="@style/Theme.CloudRent.AppBarOverlay"
        app:popupTheme="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/blue_rec"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:text="Selamat Datang!"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:text="Lengkapi data berikut dan akun CloudCar Anda akan terbuat"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="20dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/round_white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/birtud_trans"
                        android:text="Nama Lengkap"/>


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/NamaLengkap"
                            android:layout_height="40dp"
                            android:hint="Tanpa Gelar"
                            android:textColor="@color/birtud"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:inputType="text"
                            android:focusable="true"
                            android:background="@drawable/form_search"
                            android:focusableInTouchMode="true"
                            tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textErrorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/birtud_trans"
                        android:text="Username"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:paddingEnd="20dp"
                            android:id="@+id/Username"
                            android:layout_height="40dp"
                            android:hint="Username"
                            android:textColor="@color/birtud"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:inputType="text"
                            android:focusable="true"
                            android:background="@drawable/form_search"
                            android:focusableInTouchMode="true"
                            tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textErrorUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/birtud_trans"
                        android:text="Email"/>


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:paddingEnd="20dp"
                            android:id="@+id/Email"
                            android:layout_height="40dp"
                            android:hint="nama@email.com"
                            android:textColor="@color/birtud"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:inputType="textEmailAddress"
                            android:focusable="true"
                            android:background="@drawable/form_search"
                            android:focusableInTouchMode="true"
                            tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textErrorEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/birtud_trans"
                        android:text="Password"/>

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/EditTextRegister"
                            android:id="@+id/EditPassworRegister"
                            android:layout_width="match_parent"
                            android:inputType="textPassword"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="16sp"
                            android:background="@drawable/form_search"
                            android:hint="Huruf, angka, simbol" />

                    <TextView
                        android:id="@+id/textErrorPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/birtud_trans"
                        android:text="Confirmation Password"/>

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextRegister"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/EditConfirmPasswordRegister"
                        android:hint="Ketik Ulang Password"
                        android:inputType="textPassword"
                        android:background="@drawable/form_search" />
                    <TextView
                        android:id="@+id/textErrorConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:visibility="gone" />

                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/daftar"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/ripple_effect"
                            android:text="Daftar"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText,MissingConstraints"
                            android:onClick="registerme"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun? "
                android:textSize="13sp"
                android:textColor="@color/birtud"/>
            <TextView
                android:id="@+id/btnmasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/birtud"
                android:clickable="true"
                android:onClick="onTextClicked"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>