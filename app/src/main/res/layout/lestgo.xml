<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09315f">


    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="725dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center">

        <ImageView
            android:layout_width="283dp"
            android:layout_height="223dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/logo"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="82dp"
            tools:ignore="ContentDescription,HardcodedText,MissingConstraints"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:text="Cloud Rent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="254dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="366dp"
            android:layout_height="52dp"
            android:background="@drawable/shape_rectangle"
            android:text="Les't go"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="591dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>