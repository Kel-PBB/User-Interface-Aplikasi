<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_pesanan_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:elevation="8dp"
    android:foreground="@drawable/card_ripple_effect"
    android:background="@drawable/roundeditfocus"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/birtud"/>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="0.2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tglMualai"
                        android:textColor="@color/birtud_trans"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Rab, 23 Juni 2023"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/birtud_trans"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/tglSelesai"
                        android:textColor="@color/birtud_trans"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Rab, 23 Juni 2023"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/namaMobil"
                        android:layout_weight="0.2"
                        android:textColor="@color/birtud"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="Avanza"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_weight="0.8"
                            android:textColor="@color/birtud_trans"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="wrap_content"
                            android:text="Durasi : "/>
                        <TextView
                            android:id="@+id/hari"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="0.8"
                            android:textColor="@color/birtud_trans"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="wrap_content"
                            android:text="1"/>
                        <TextView
                            android:layout_weight="0.8"
                            android:textColor="@color/birtud_trans"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="wrap_content"
                            android:text="hari"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.8"
                            android:textColor="@color/birtud_trans"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="wrap_content"
                            android:text="Waktu Ambil/Jemput: "/>
                        <TextView
                            android:id="@+id/jam"
                            android:layout_weight="0.8"
                            android:textColor="@color/birtud_trans"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="wrap_content"
                            android:text="14.30"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dash_line" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/birtud"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="Total : IDR "/>
                    <TextView
                        android:id="@+id/total"
                        android:textColor="@color/birtud"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="1.500.000"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:gravity="bottom"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tglPesan"
                    android:layout_margin="5dp"
                    android:textColor="@color/birtud_trans"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:text="Rab, 23 Juni 2023"/>
                <FrameLayout
                    android:layout_weight="0.8"
                    android:padding="5dp"
                    android:layout_gravity="end"
                    android:background="@drawable/rounded_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/status"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menuggu Penjemputan"
                        android:textSize="9sp"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>