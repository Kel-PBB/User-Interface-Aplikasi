<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudRent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/birtud</item>
        <item name="colorPrimaryDark">@color/birtud</item>
        <item name="colorAccent">@color/birtud</item>
        <!--        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.SearchActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize the navigation bar color here -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="EditTextTangal">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditTextRegister">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardBottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedTopCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ToolbarSubTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.CloudRent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slie_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.CloudRent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CloudRent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Other style attributes -->
        <item name="android:navigationIcon">@drawable/back_arrow</item>
    </style>

    <style name="SearchViewStle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textCursorDrawable">@drawable/seacrh_cursor</item>
    </style>

    <!--    Bottom Navigation text Style-->
    <style name="BottomNavigationLabelStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textSize">11sp</item> <!-- Adjust the text size as desired -->
        <item name="android:textStyle">bold</item> <!-- Replace with the desired color -->
        <!-- Add more attributes as needed -->
    </style>

</resources>