<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudRent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/birtud</item>
        <item name="colorPrimaryDark">@color/birmud</item>
        <item name="colorAccent">@color/birtud</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="EditTextRegister">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="Theme.CloudRent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CloudRent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CloudRent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>